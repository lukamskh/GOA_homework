def joined_string(str1, str2):
   print(str1 + " " + str2)
joined_string("Luka", "ok")

def find_maximum(num1, num2):
   if num1 > num2:
      num1 = str(num1)
      num2 = str(num2)
      print(num1 + " is above " + num2)
   elif num1 < num2:
      num1 = str(num1)
      num2 = str(num2)
      print(num1 + " is below " + num2)
find_maximum(4, 9)

def reverse_string(str1, str2):
   print(str2 + " " + str1)
reverse_string("mskhaladze", "luka")

def squere_root(num1, num2):
   print(num1 * num2)
squere_root(3,9)

def is_it_simple(num):
   if type(num) == int:
      print("your number is simple")
   elif type(num) == type(2.5):
      print("your number is not simple")
   elif type(num) == str:
      print("you didnt type number")
is_it_simple(6)

def add_to_list(n):
   list = []
   for i in range(n):
      list.append(i)
   print(list)
add_to_list(4)