def manual_sum():
    list = (4, 6, 3, 7)
    for i in range(4):
       print(list[i] + list[0])
       print(list[i] + list[1])
       print(list[i] + list[2])
       print(list[i] + list[3])
       i = i + 1
manual_sum()

def greet(name = "guest"):
    print("hello " + name)
greet("luka")
greet()

firstnum = int(input("enter number: "))
secondnum = int(input("enter number: "))

def sum():
    num = 0
    for i in range(firstnum, secondnum):
        num = num + i
        print(num)
sum()

def positive_or_not():
 num1 = int(input("enter number: "))
 num2 = int(input("enter number: "))
 num3 = int(input("enter number: "))
 num4 = int(input("enter number: "))
 list = [num1, num2, num3, num4]
 for i in range(4):
        if list[i] %  2 !=0:
          print("negative")
        elif list[i] % 2 == 0:
         print("positive")
positive_or_not()

